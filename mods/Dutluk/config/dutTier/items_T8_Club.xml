      <effect_group name="Power Attack">
        <passive_effect name="EntityDamage" operation="perc_add" value="1.4" tags="secondary"/>
        <passive_effect name="BlockDamage" operation="perc_add" value="1.4" tags="secondary"/>
        <passive_effect name="StaminaLoss" operation="base_set" value="30" tags="secondary"/>
