<?xml version="1.0" encoding="UTF-8"?>

<configs>

  <!-- *** NEW T6 WEAPON BUNDLES *** -->
  <append xpath="/items">

    <item name="dutT6WeaponBundle">
      <property name="CreativeMode" value="None"/>
      <property name="CustomIcon" value="resourcePaper"/>
      <property name="CustomIconTint" value="ff9f9f"/>
      <property name="ItemTypeIcon" value="computer"/>
      <property name="HoldType" value="45"/>
      <property name="Meshfile" value="@:Other/Items/Misc/sackPrefab.prefab"/>
      <property name="DropMeshfile" value="@:Other/Items/Misc/sack_droppedPrefab.prefab"/>
      <property name="Material" value="Mmetal"/>
      <property name="Stacknumber" value="1"/>
      <property name="Weight" value="0"/>
      <property name="SellableToTrader" value="false"/>
      <property name="Group" value="Special Items,Weapon"/>
      <property class="Action0">
        <property name="Class" value="OpenBundle"/>
        <property name="Delay" value="0"/>
      </property>
    </item>

    <!-- *** M60 *** -->
    <item name="dutT6M60Bundle">
      <property name="Extends" value="dutT6WeaponBundle"/>
      <property name="CreativeMode" value="Player"/>
      <property name="CustomIcon" value="gunMGT3M60"/>
      <property name="DescriptionKey" value="dutT6M60BundleDesc"/>
      <property class="Action0">
        <property name="Create_item" value="gunMGT3M60"/>
        <property name="Create_item_count" value="6"/>
      </property>
    </item>

    <!-- *** BOW *** -->
    <item name="dutT6CompoundBowBundle">
      <property name="Extends" value="dutT6WeaponBundle"/>
      <property name="CreativeMode" value="Player"/>
      <property name="CustomIcon" value="gunBowT3CompoundBow"/>
      <property name="DescriptionKey" value="dutT6CompoundBowBundleDesc"/>
      <property class="Action0">
        <property name="Create_item" value="gunBowT3CompoundBow"/>
        <property name="Create_item_count" value="6"/>
      </property>
    </item>


  </append>

</configs>
