<?xml version="1.0" encoding="UTF-8"?>

<configs>

  <append xpath="/items/item[starts-with(@name, 'armor') and not(contains(@name, 'zombie')) and not(@name = 'armorSkillMagazine') and not(substring(@name, string-length(@name) - string-length('Parts') + 1) = 'Parts')]">
    <effect_group>
      <passive_effect name="PhysicalDamageResist" operation="perc_add" value="-.1,.1" tier="5"/>
      <passive_effect name="ElementalDamageResist" operation="perc_add" value="-.1,.1" tier="5"/>
      <passive_effect name="DegradationMax" operation="perc_add" value="-.1,.1" tier="5"/>
    </effect_group>
    <effect_group>
      <passive_effect name="PhysicalDamageResist" operation="perc_add" value="-.1,.2" tier="6"/>
      <passive_effect name="ElementalDamageResist" operation="perc_add" value="-.1,.2" tier="6"/>
      <passive_effect name="DegradationMax" operation="perc_add" value="-.1,.2" tier="6"/>
    </effect_group>
  </append>

  <!-- *** GENERAL MODIFICATIONS - TOOLS *** -->
  <append xpath="/items/item[starts-with(@name, 'meleeTool') and not(contains(@name, 'Animal')) and not(substring(@name, string-length(@name) - string-length('Parts') + 1) = 'Parts') and not(substring(@name, string-length(@name) - string-length('Magazine') + 1) = 'Magazine')]">
    <effect_group>
      <passive_effect name="EntityDamage" operation="perc_add" value="-.1,.1" tier="5"/>
      <passive_effect name="BlockDamage" operation="perc_add" value="-.1,.1" tier="5"/>
      <passive_effect name="DegradationMax" operation="perc_add" value="-.1,.1" tier="5"/>
    </effect_group>
    <effect_group>
      <passive_effect name="EntityDamage" operation="perc_add" value="-.1,.2" tier="6"/>
      <passive_effect name="BlockDamage" operation="perc_add" value="-.1,.2" tier="6"/>
      <passive_effect name="DegradationMax" operation="perc_add" value="-.1,.2" tier="6"/>
    </effect_group>
  </append>

  <!-- *** GENERAL MODIFICATIONS - MELEE WEAPONS *** -->
  <append xpath="/items/item[starts-with(@name, 'meleeWpn') and not(contains(@name, 'Animal')) and not(substring(@name, string-length(@name) - string-length('Parts') + 1) = 'Parts') and not(substring(@name, string-length(@name) - string-length('Magazine') + 1) = 'Magazine')]">
    <effect_group>
      <passive_effect name="EntityDamage" operation="perc_add" value="-.1,.1" tier="5"/>
      <passive_effect name="BlockDamage" operation="perc_add" value="-.1,.1" tier="5"/>
      <passive_effect name="DegradationMax" operation="perc_add" value="-.1,.1" tier="5"/>
    </effect_group>
    <effect_group>
      <passive_effect name="EntityDamage" operation="perc_add" value="-.1,.2" tier="6"/>
      <passive_effect name="BlockDamage" operation="perc_add" value="-.1,.2" tier="6"/>
      <passive_effect name="DegradationMax" operation="perc_add" value="-.1,.2" tier="6"/>
    </effect_group>
  </append>

  <!-- *** GENERAL MODIFICATIONS - GUNS, BOWS, CROSSBOWS, ROBOTIC *** -->
  <append xpath="/items/item[(starts-with(@name, 'gunHandgun') or starts-with(@name, 'gunShotgun') or starts-with(@name, 'gunRifle') or starts-with(@name, 'gunMGT') or starts-with(@name, 'gunExplosives') or starts-with(@name, 'gunBow') or starts-with(@name, 'gunBot')) and not(contains(@name, 'Animal')) and not(substring(@name, string-length(@name) - string-length('Parts') + 1) = 'Parts') and not(substring(@name, string-length(@name) - string-length('Magazine') + 1) = 'Magazine')]">
    <effect_group>
      <passive_effect name="EntityDamage" operation="perc_add" value="-.1,.1" tier="5"/>
      <passive_effect name="BlockDamage" operation="perc_add" value="-.1,.1" tier="5"/>
      <passive_effect name="DegradationMax" operation="perc_add" value="-.1,.1" tier="5"/>
    </effect_group>
    <effect_group>
      <passive_effect name="EntityDamage" operation="perc_add" value="-.1,.2" tier="6"/>
      <passive_effect name="BlockDamage" operation="perc_add" value="-.1,.2" tier="6"/>
      <passive_effect name="DegradationMax" operation="perc_add" value="-.1,.2" tier="6"/>
    </effect_group>
  </append>




</configs>